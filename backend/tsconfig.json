{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true, 
    "jsx": "react", 
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.js",
    "src/**/*.tsx"
, "src/app.js"  ],
  "exclude": ["node_modules", "**/*.spec.js"]
}